{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun --bun next dev --turbopack",
    "dev:legacy": "bun --bun next dev",
    "build": "next build",
    "build:bun": "bun --bun next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "bun test --passWithNoTests",
    "test:watch": "bun test --watch --passWithNoTests",
    "test:coverage": "bun test --coverage --passWithNoTests",
    "quality": "bun run format && bun run lint && bun run type-check && bun test",
    "audit": "bun audit",
    "monitoring:start": "bash scripts/start-monitoring.sh",
    "monitoring:stop": "cd grafana && docker-compose down",
    "monitoring:logs": "cd grafana && docker-compose logs -f"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@types/qrcode": "^1.5.6",
    "browser-image-compression": "^2.0.2",
    "daisyui": "5.4.2",
    "framer-motion": "^12.23.24",
    "graphql": "^16.11.0",
    "graphql-request": "^7.3.1",
    "next": "^16.0.1",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.65.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.39.0",
    "@grafana/faro-react": "^1.19.0",
    "@grafana/faro-web-sdk": "^1.19.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-trace-web": "^2.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "24.10.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "^16.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "postcss-replace": "^2.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.16",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
